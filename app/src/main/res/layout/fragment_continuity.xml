<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ContinuityDataBinding">

        <variable
            name="vm"
            type="com.mr.mf_pd.application.view.fragment.continuity.ContinuityModelViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            app:toast="@{vm.toastStr}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_content_bg"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextClock
                        android:id="@+id/textClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blueColor"
                        android:textSize="14sp"
                        android:textStyle="bold|normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:id="@+id/tbTextValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_title"
                            android:textSize="13sp" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_content_bg"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/title1Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:text="有效值，dBmV"
                            android:textColor="@color/text_title"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title1Tv"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <ProgressBar
                                    android:id="@+id/progressBar1"
                                    style="@style/Progress1"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:progress="40" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp" />

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/lineChart1"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingStart="3dp"
                                android:text="@{vm.yxValue}"
                                android:textColor="@color/text_title"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/layout1"
                            android:layout_marginBottom="3dp"
                            android:text="-10"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/title2Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:text="峰值，dBmV"
                            android:textColor="@color/text_title"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/layout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title2Tv"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <ProgressBar
                                    android:id="@+id/progressBar2"
                                    style="@style/Progress2"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:progress="40" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp" />

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/lineChart2"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingStart="3dp"
                                android:text="@{vm.fzValue}"
                                android:textColor="@color/text_title"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/layout2"
                            android:layout_marginBottom="3dp"
                            android:text="-10"
                            android:textSize="12sp" />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/title3Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:text="频率成分1，dBmV"
                            android:textColor="@color/text_title"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/layout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title3Tv"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ProgressBar
                                    android:id="@+id/progressBar3"
                                    style="@style/Progress3"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:progress="10" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp" />

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/lineChart3"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingStart="3dp"
                                android:text="@{vm.f1Value}"
                                android:textColor="@color/text_title"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/layout3"
                            android:layout_marginBottom="3dp"
                            android:text="-10"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/title4Tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:text="有频率成分2，dBmV"
                            android:textColor="@color/text_title"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/layout4"
                            android:layout_marginBottom="3dp"
                            android:text="-10"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/layout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title4Tv"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ProgressBar
                                    android:id="@+id/progressBar4"
                                    style="@style/Progress4"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:progress="10" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp" />

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/lineChart4"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingStart="3dp"
                                android:text="@{vm.f2Value}"
                                android:textColor="@color/text_title"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/uhf_icon_record" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@mipmap/uhf_icon_small" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/uhf_icon_big" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@mipmap/uhf_icon_reset" />

            </LinearLayout>


            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="20dp"
                android:text="@{vm.location}"
                android:textColor="@color/blueColor"
                android:textSize="13sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>